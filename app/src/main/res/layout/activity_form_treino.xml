<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app_padrao">

    <include layout="@layout/layout_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="CADASTRAR NOVO TREINO"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:textAllCaps="true"
        android:letterSpacing="0.1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data do Treino"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>
            <EditText
                android:id="@+id/edtDataTreino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selecione a data"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/black"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Treino"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="16dp"/>
            <Spinner
                android:id="@+id/spnTipoTreino"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="@color/black"
                android:spinnerMode="dropdown"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intensidade"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="16dp"/>
            <Spinner
                android:id="@+id/spnIntensidade"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="@color/black"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duração (min)"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
                    <EditText
                        android:id="@+id/edtDuracao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex: 60"
                        android:inputType="number"
                        android:textColorHint="#DDDDDD"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cansaço (1-10)"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
                    <EditText
                        android:id="@+id/edtSensacaoTreino"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex: 7"
                        android:inputType="number"
                        android:textColorHint="#DDDDDD"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observações sobre o treino"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/edtObservacoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comentários sobre o treino realizado"
                android:lines="3"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btnSalvarTreino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#2f624b"
                android:text="SALVAR TREINO"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>